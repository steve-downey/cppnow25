{
  "version": 6,
  "include": [
    "CMakeGenericPresets.json"
  ],
  "configurePresets": [
    {
      "name": "debug-base-Linux",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "release-base-Linux",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "inherits": [
        "root-config",
        "debug-base-Linux"
      ]
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "inherits": [
        "root-config",
        "release-base-Linux"
      ]
    }
  ]
}
